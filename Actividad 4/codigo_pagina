***** JS *****
const navbarMenu = document.querySelector(".navbar .links");
const hamburgerBtn = document.querySelector(".hamburger-btn");
const hideMenuBtn = navbarMenu.querySelector(".close-btn");
const formPopup = document.querySelector(".form-popup");
const hidePopupBtn = formPopup.querySelector(".close-btn");
const signupLoginLink = formPopup.querySelectorAll(".bottom-link a");
const showPopupLogin = document.querySelector(".login-btn");


// Show mobile menu
hamburgerBtn.addEventListener("click", () => {
    navbarMenu.classList.toggle("show-menu");
});

// Hide mobile menu
hideMenuBtn.addEventListener("click", () =>  hamburgerBtn.click());

// Show login popup
showPopupLogin.addEventListener("click", () => {
    document.body.classList.toggle("show-popup");
});

// Hide login popup
hidePopupBtn.addEventListener("click", () => showPopupLogin.click());

// Show or hide signup form
signupLoginLink.forEach(link => {
    link.addEventListener("click", (e) => {
        e.preventDefault();
        formPopup.classList[link.id === 'signup-link' ? 'add' : 'remove'];
    });
});



///CODIGO PARA MOSTRAR DIV DE CLIMA
const clicClima = document.getElementById('clima');
const divClima = document.getElementById('consultarClima');

// Añadimos el evento de clic
clicClima.addEventListener('click', function(event) {
    event.preventDefault(); // Evita que el enlace recargue la página
    
    // Cambiamos el estilo de display
    if (divClima.style.display === 'none') {
      divClima.style.display = 'block';
    } else {
      divClima.style.display = 'none'; // Esto permite ocultarlo de nuevo si se vuelve a clicar
    }
  });


///CODIGO PARA MOSTRAR DIV DE BEBIDAS
const clicBebidas = document.getElementById('bebidas');
const divBebidas = document.getElementById('consultarBebidas');

clicBebidas.addEventListener('click', function(event) {
    event.preventDefault(); 
    
    if (divBebidas.style.display === 'none') {
      divBebidas.style.display = 'block';
    } else {
      divBebidas.style.display = 'none'; 
    }
});

///CODIGO PARA MOSTRAR DIV DE HABITACIONES
const clicHabit = document.getElementById('habitaciones');
const divHabit = document.getElementById('consultarHabitaciones');

clicHabit.addEventListener('click', function(event) {
    event.preventDefault(); 
    

    if (divHabit.style.display === 'none') {
      divHabit.style.display = 'block';
    } else {
      divHabit.style.display = 'none'; 
    }
});
